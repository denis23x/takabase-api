{
  "name": "takabase-api",
  "version": "1.0.0",
  "description": "Node backend project",
  "author": "Denis Iakimenko",
  "private": true,
  "main": "dist/index.js",
  "license": "UNLICENSED",
  "prisma": {
    "schema": "src/database/schema.prisma",
    "seed": "ts-node src/database/seed.ts"
  },
  "engines": {
    "node": "18"
  },
  "watch": {
    "start:functions": "*.ts"
  },
  "scripts": {
    "start:dev": "dotenv -e .env.takabase-local -- npm run build:prisma && npm-watch start:functions",
    "start:deploy": "npx tsx deploy.ts",
    "start:functions": "tsc -p tsconfig.json && npx @google-cloud/functions-framework --target=api --port=8080",
    "build:prod": "tsc -p tsconfig.json && npm run build:prisma && cp src/index.html dist",
    "build:prisma": "npx prisma generate && mkdir -p dist/database/client && cp -R src/database/client dist/database"
  },
  "keywords": [
    "node",
    "fastify",
    "prisma",
    "typescript",
    "swagger",
    "javascript"
  ],
  "dependencies": {
    "@fastify/compress": "^7.0.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/etag": "^5.2.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.4",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@prisma/client": "^5.14.0",
    "@tidbcloud/prisma-adapter": "^5.11.1",
    "@tidbcloud/serverless": "^0.1.1",
    "algoliasearch": "^4.23.3",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "fastify": "^4.27.0",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.1",
    "nanoid": "^3.3.4",
    "nanoid-dictionary": "^4.3.0",
    "unique-names-generator": "^4.7.1",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@faker-js/faker": "^8.4.1",
    "@types/nanoid-dictionary": "^4.2.3",
    "@types/node": "^20.12.12",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fastify-tsconfig": "^2.0.0",
    "firebase-functions-test": "^3.2.0",
    "nodemon": "^3.1.0",
    "npm-check-updates": "^16.14.20",
    "npm-watch": "^0.13.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "prompts": "^2.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
